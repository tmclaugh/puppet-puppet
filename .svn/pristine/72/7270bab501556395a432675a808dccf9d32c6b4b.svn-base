# $Id$

class straycat::os::linux::mta {
	if $::operatingsystem == 'centos' {
		if $::operatingsystemrelease >= 6 { 
			class { 'postfix::local': smarthost => "$straycat::params::mail_host"}
		} else {
			class { 'sendmail::local': smarthost => "$straycat::params::mail_host"}
		}
	} else {
		class { 'sendmail::local': smarthost => "$straycat::params::mail_host"}

		
	}
}
