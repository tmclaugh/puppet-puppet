#!/bin/sh
#
# $Id$
#
# Members of scadmins should have sbin directories in their path.
# This only applies to 5.x as behavior was changed in 6.x.

if [ -f /etc/redhat-release ]; then
	if ! grep -E '6\..' /etc/redhat-release; then
		admins="scadmins"

		if [ -z "$EUID" -a -x /usr/bin/id ]; then
			EUID=`id -u`
			UID=`id -ru`
		fi

		getent group $admins | grep $USER > /dev/null 2>&1
		is_admin=$?

		if [ "$is_admin" = "0" -a "$EUID" != "0" ]; then
			pathmunge /sbin
			pathmunge /usr/sbin
			pathmunge /usr/local/sbin
		fi
	fi
fi
