class straycat::os::linux::scripts {
	require straycat::os::linux::opt
	
	# set_hostname.sh
	file { "${straycat::params::opt_prefix}/bin/set_hostname.sh" :
		owner => root,
		group => root,
		mode => 755,
		source => "puppet:///modules/straycat/set_hostname.sh",
	}

	# admins_path.sh
	file { "/etc/profile.d/admins_path.sh" :
		owner => root,
		group => root,
		mode => 755,
		source => "puppet:///modules/straycat/admins_path.sh"
	}

	# autopartexpand.sh
	file { "/opt/straycat/bin/autopartexpand.sh" :
		owner => root,
		group => root,
		mode => 755,
		source => "puppet:///modules/straycat/autopartexpand.sh",
	}

	# firstboot.sh
	file { "/etc/profile.d/firstboot.sh" :
		owner => root,
		group => root,
		mode => 755,
		source => "puppet:///modules/straycat/firstboot.sh"
	}
}
