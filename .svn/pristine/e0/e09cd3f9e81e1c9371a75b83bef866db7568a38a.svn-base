# $Id$

class krb5::client ($realm, $domain, $kdc_list, $kadminsrv) {
	package { "krb5-workstation" :
		ensure => present,
	}

	# Jut use a template here isntead of using authconfig to
	# manipulate it.  It shouldn't need much is ever any
	# customization on a per host basis.
	file { "/etc/krb5.conf" :
		owner => root,
		group => root,
		mode => 644,
		content => template("krb5/krb5.conf.erb"),
		require => Package["krb5-workstation"]
	}
}
