# $Id$
# XXX: This should be a template.
[logging]
 default = FILE:/var/log/krb5libs.log
 kdc = FILE:/var/log/krb5kdc.log
 admin_server = FILE:/var/log/kadmind.log

[libdefaults]
 default_realm = <%= realm %>
 dns_lookup_realm = true
 dns_lookup_kdc = true
 # XXX: Match AD domain default
 ticket_lifetime = 10h
 forwardable = yes

[realms]
# XXX: Not necessary due to DNS lookups enabled above.
 <%= realm %> = {
<% if kdc_list -%>
<% kdc_list.each do |kdc| -%>
  kdc = <%= kdc %>
<% end -%>
<% end -%>
  <% if kadminsrv %>admin_server = <%= kadminsrv %>:749<% end %>
 }

[domain_realm]
 <%= domain %> = <%= realm %>
 .<%= domain %> = <%= realm %> 

[appdefaults]
 pam = {
   debug = false
   ticket_lifetime = 36000
   renew_lifetime = 36000
   forwardable = true
   krb4_convert = false
 }

