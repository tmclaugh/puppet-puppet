# Module for creating virtual hosts.

class apache::vhost ($named_vhost_addr=$::ipaddress_eth0) {
	file { "/etc/httpd/vhosts.d" :
		mode => "755",
		ensure => "directory",
	}

	file { "/etc/httpd/conf.d/vhost.conf" :
		owner => root,
		group => root,
		mode => 644,
		content => template("apache/vhost.conf.erb"),
		require => Package["httpd"],
		notify => Service["httpd_service"],
	}

	# XXX: Leave undefined till we have a use case.
	#define site ()
}
