# $Id$

class apache {
	$basedir = "/etc/httpd"
	$conffile = "$basedir/conf/httpd.conf"
}

class apache::site {
	include apache::httpd
	class { "apache::mod_ssl" :}
	
}

class apache::site::custom ($httpd_sslcertfile, $httpd_sslkeyfile, $httpd_sslcertchainfile) {
	include apache::httpd
	class { "apache::mod_ssl" : 
		sslcertfile => $httpd_sslcertfile,
		sslkeyfile => $httpd_sslkeyfile,
		sslcertchainfile => $httpd_sslcertchainfile,
	}
}
