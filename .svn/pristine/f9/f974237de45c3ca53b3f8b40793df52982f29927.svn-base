# $Id$

class postfix::common {
	include postfix::params

	package { "postfix" :
		ensure => installed
	}

	file { "$postfix::params::master_cf" :
		owner => 'root',
		group => 'root',
		mode => '0644',
		require => Package['postfix']
	}

	file { "$postfix::params::main_cf" :
		owner => 'root',
		group => 'root',
		mode => '0644',
		require => Package['postfix']
	}
	
}

